name: CI de Qualidade código

on:
  push:
    branches:
      - '**'
  pull_request:
    branches:
      - '**'

jobs:
  fta:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout código
        uses: actions/checkout@v4

      - name: Executar o FTA
        uses: exiguus/fta-github-action@v0.1.2
        with:
          project_path: './src'  

      - name: Upload dos artefatos FTA
        uses: actions/upload-artifact@v4
        with:
          name: fta_results
          path: fta_output.json
